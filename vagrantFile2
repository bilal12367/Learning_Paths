Vagrant.configure("2") do |config|
    # Specify the box and its version
    config.vm.box = "ubuntu/focal64"
    config.vm.box_version = "20240502.0.0"
  
    # Set the VM provider (VirtualBox, VMware, etc.)
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
    end
  
    # Assign a static IP address
    config.vm.network "public_network", ip: "192.168.0.19"
  
    # Run shell provisioners to install Java 17 and Node.js 21
    config.vm.provision "shell", inline: <<-SHELL
      # Update apt-get package list
      sudo apt-get update
  
      # Install Java 17
      sudo apt-get install -y openjdk-17-jdk

        # Install Node.js 21 using NodeSource
        curl -fsSL https://deb.nodesource.com/setup_21.x | sudo -E bash -
        sudo apt-get install -y nodejs

        # Install Docker dependencies
        sudo apt-get install -y apt-transport-https ca-certificates curl software-properties-common

        # Add Docker GPG key
        curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -

        # Add Docker repository
        sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable"

        # Update apt-get package list again
        sudo apt-get update

        # Install Docker
        sudo apt-get install -y docker-ce docker-ce-cli containerd.io

        # Add the current user to the docker group to avoid using sudo with docker commands
        sudo usermod -aG docker $USER
    SHELL
  end
  