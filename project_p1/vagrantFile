Vagrant.configure("2") do |config|
    # Use an Ubuntu base box
    config.vm.box = "ubuntu/bionic64"
  
    # Assign a static IP
    config.vm.network "public_network", ip: "192.168.0.9" # Change this to your desired IP
  
    # Provision the VM with Docker
    config.vm.provision "docker" do |d|
      d.run "mongodb",
        image: "mongo:latest",
        args: "-p 27017:27017",
        restart: "always",
        volumes: ["mongodb_data:/data/db"]
    end
  
    # Optionally, expose the MongoDB port to the host machine
    config.vm.network "forwarded_port", guest: 27017, host: 27017
  
    # Additional optional settings
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"  # Adjust memory as needed
      vb.cpus = 2         # Adjust CPU count as needed
    end
  end
  